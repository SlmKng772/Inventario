@model MVCInvTI.Models.InvMaqModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Criar</h1>

<h3>Inventário de Máquinas</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <select name="idProd" class="form-control">
                @foreach (var item in Model.ProdutoList)
                {
                    <option value="@item.idProd">@item.Maquina</option>
                }
            </select>
            <div class="form-group">
                <label asp-for="CodMaq" class="control-label">Código</label>
                <input asp-for="CodMaq" class="form-control" />
                <span asp-validation-for="CodMaq" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label">Observações</label>
                <input asp-for="Observacoes" class="form-control" />
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
