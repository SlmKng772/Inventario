@model MVCInvTI.Models.CadCliModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Criar Registro</h1>

<h4>Clientes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label>Máquina</label>
            <select name="idMaq" class="form-control">
                @foreach (var item in Model.MaquinasList)
                {
                    <option value="@item.idMaq">@item.CodMaq</option>
                }
            </select>
            <hr />
            <label>Software</label>
            <select name="idSoft" class="form-control">
                @foreach (var item in Model.SoftwareList)
                {
                    <option value="@item.idSoft">@item.Software</option>
                }
            </select>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeCli" class="control-label">Nome</label>
                <input asp-for="NomeCli" class="form-control" />
                <span asp-validation-for="NomeCli" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
