@model IEnumerable<MVCInvTI.Models.CadCli>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Início</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idMaq)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idSoft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeCli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idMaq)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.idSoft)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CPF)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.idCli">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.idCli">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.idCli">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
