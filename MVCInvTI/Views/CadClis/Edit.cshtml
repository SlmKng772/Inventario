@model MVCInvTI.Models.CadCli

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Registro</h1>

<h3>Clientes</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idCli" />
            <div class="form-group">
                <label asp-for="idMaq" class="control-label">Máquina</label>
                <input asp-for="idMaq" class="form-control" />
                <span asp-validation-for="idMaq" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idSoft" class="control-label">Software</label>
                <input asp-for="idSoft" class="form-control" />
                <span asp-validation-for="idSoft" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeCli" class="control-label">Nome</label>
                <input asp-for="NomeCli" class="form-control" />
                <span asp-validation-for="NomeCli" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
